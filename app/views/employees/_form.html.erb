<%= form_for @employee do |f| %>
	<ul>
		<% if @employee.errors.any? %>
			<%= @employee.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		<% end %>
	</ul>
    <% end %>


<p>Employee Details</p>
    <%= form_for @employee do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
    <%= f.label :title %>
	<%= f.text_field :title %>
    <%= f.collection_select:company_ids, Company.all, :id, :name %>
    <%= f.submit %>
    <% end %>
    

